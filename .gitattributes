# Git LFS tracking for large files
# Binary data files
*.npz filter=lfs diff=lfs merge=lfs -text
*.h5 filter=lfs diff=lfs merge=lfs -text
*.hdf5 filter=lfs diff=lfs merge=lfs -text
*.joblib filter=lfs diff=lfs merge=lfs -text
# Sequence and bioinformatics files
*.fasta filter=lfs diff=lfs merge=lfs -text
*.faa filter=lfs diff=lfs merge=lfs -text
*.fa filter=lfs diff=lfs merge=lfs -text
*.gb filter=lfs diff=lfs merge=lfs -text
# Diamond database files
*.dmnd filter=lfs diff=lfs merge=lfs -text
# Compressed files
*.gz filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
# Large text/data files
*.obo filter=lfs diff=lfs merge=lfs -text
*.aln-clustal_num filter=lfs diff=lfs merge=lfs -text
*.m8 filter=lfs diff=lfs merge=lfs -text
# Large tabular data files
*.csv filter=lfs diff=lfs merge=lfs -text
*.tsv filter=lfs diff=lfs merge=lfs -text
# OrthoFinder output files
**/OrthoFinder/**/Orthogroups.txt filter=lfs diff=lfs merge=lfs -text
**/OrthoFinder/**/OrthoFinder_graph.txt filter=lfs diff=lfs merge=lfs -text
**/OrthoFinder/**/SequenceIDs.txt filter=lfs diff=lfs merge=lfs -text
**/OrthoFinder/**/clusters_*.txt filter=lfs diff=lfs merge=lfs -text
# Large HTML files (MAST results)
**/mast*.html filter=lfs diff=lfs merge=lfs -text
data/CLUSTALW[[:space:]]Result filter=lfs diff=lfs merge=lfs -text
